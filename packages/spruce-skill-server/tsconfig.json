{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "ES2017",
		"lib": ["es2017"],
		"allowJs": true,
		"declaration": true,
		"noImplicitAny": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"strict": true,
		"noUnusedLocals": true,
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "build",
		"baseUrl": ".",
		"paths": {
			"*": ["node_modules/*"]
		}
	},
	"include": [
		"index.ts",
		"controllers/**/*",
		"models/**/*",
		"factories/**/*",
		"gql/**/*",
		"helpers/**/*",
		"lib/**/*",
		"middleware/**/*",
		"services/**/*",
		"support/**/*",
		"tests/**/*",
		"utilities/**/*",
		"types/**/*"
	],
	"exclude": ["**/node_modules/*"]
}
