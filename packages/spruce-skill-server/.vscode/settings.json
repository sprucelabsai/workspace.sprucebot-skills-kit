{
	"git.ignoreLimitWarning": true,
	"prettier.eslintIntegration": true,
	"typescript.validate.enable": true,
	"eslint.validate": ["javascript", "typescript"],
	"eslint.options": {
		"extensions": [".js", ".ts"]
	},
	"typescript.tsdk": "node_modules/typescript/lib",
	"files.watcherExclude": {
		"**/build/**": true
	},
	"search.exclude": {
		"**/build": true
	}
}
