	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Generate Schema Definitions",
			"protocol": "inspector",
			"runtimeExecutable": "yarn",
			"runtimeArgs": ["run", "generate:schemas:local"],
			"console": "integratedTerminal",
			"port": 5200,
			"restart": false,
			"localRoot": "${workspaceRoot}",
			"remoteRoot": "${workspaceRoot}",
			"timeout": 20000
		}
	]
}
