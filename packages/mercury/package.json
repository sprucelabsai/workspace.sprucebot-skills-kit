{
	"name": "@sprucelabs/mercury",
	"publishConfig": {
		"access": "public"
	},
	"files": [
		"build"
	],
	"version": "9.0.0",
	"main": "./build/index.js",
	"types": "./build/index.d.ts",
	"description": "The simple way to interact with the Spruce Experience Platform",
	"keywords": [
		"node",
		"components",
		"sprucebot",
		"sprucelabs"
	],
	"homepage": "https://github.com/sprucelabsai/workspace.sprucebot-skills-kit",
	"bugs": {
		"url": "https://github.com/sprucelabsai/workspace.sprucebot-skills-kit/issues"
	},
	"scripts": {
		"build": "npm run clean && npm run build:node && npm run build:browser",
		"build:node": "tsc | true",
		"build:browser": "tsc --project tsconfig.browser.json",
		"build:umd": "rollup -c rollup.config.js",
		"#build:umd": "rollup ./build/index.js --format umd --name Mercury --sourceMap --output build/umd/mercury.js",
		"watch": "tsc -w",
		"clean": "rm -rf build/",
		"lint": "eslint '**/*.ts' && tsc -p . --noEmit"
	},
	"dependencies": {
		"@deepstream/client": "^5.0.5",
		"buffer": "^5.4.3",
		"debug": "^3.1.0",
		"graphql-request": "^1.8.2",
		"graphql-tools": "^4.0.4",
		"rollup": "^1.27.14",
		"superagent": "^5.1.2"
	},
	"devDependencies": {
		"@rollup/plugin-commonjs": "^11.0.0",
		"@rollup/plugin-json": "^4.0.1",
		"@rollup/plugin-node-resolve": "^6.0.0",
		"@rollup/plugin-typescript": "^2.0.1",
		"add": "^2.0.6",
		"eslint": "^5",
		"eslint-config-spruce": "^9.0.0",
		"jest": "^24.5.0",
		"nock": "^9.1.6",
		"prettier": "^1.13",
		"rollup-plugin-node-builtins": "^2.1.2",
		"rollup-plugin-node-globals": "^1.4.0",
		"yarn": "^1.2.1"
	},
	"peerDependencies": {
		"graphql": "^14.5.4",
		"typescript": "3.6.3"
	}
}
