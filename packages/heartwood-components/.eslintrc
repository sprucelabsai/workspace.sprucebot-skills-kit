{
	"plugins": ["prettier"],
	"rules": {
		"no-undef": "error",
		"no-unused-vars": "error",
		"prettier/prettier": [
			"error",
			{
				"singleQuote": true,
				"useTabs": true,
				"semi": false
			}
		]
	},
	"parserOptions": {
		"sourceType": "module",
		"ecmaVersion": 8,
		"ecmaFeatures": {
			"experimentalObjectRestSpread": true,
			"jsx": true
		}
	},
	"extends": ["prettier"],
	"globals": {
		"window": true,
		"Promise": true,
		"module": true,
		"require": true,
		"setTimeout": true,
		"log": true
	}
}
