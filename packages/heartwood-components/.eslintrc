{
	"plugins": ["prettier"],
	"rules": {
		"no-undef": "error",
		"prefer-const": "error",
		"no-var": "error",
		"no-unused-vars": "error",
		"prettier/prettier": [
			"error",
			{
				"singleQuote": true,
				"useTabs": true,
				"semi": false
			}
		]
	},
	"parserOptions": {
		"sourceType": "module",
		"ecmaVersion": 8,
		"ecmaFeatures": {
			"experimentalObjectRestSpread": true,
			"jsx": true
		}
	},
	"extends": ["prettier"],
	"env": {
		"browser": true,
		"node": true
	},
	"globals": {
		"log": true
	}
}
