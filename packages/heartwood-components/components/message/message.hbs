<div class="message">
    <span class="message__pre">
        {{#if from.image}}
        {{#if from.isSprucebot}}
        <img class="message__from-image{{#if from.isSprucebot}} message__from-sprucebot-image{{/if}}" src="{{ from.image.src }}"
            alt="{{ from.image.alt }}" width="40" height="40" />
        {{else}}
        {{> @avatar image=from.image.src showIndicator=true isOnline=from.isOnline}}
        {{/if}}
        {{else}}
        <p class="message__original-timestamp">{{ dateSent }}</p>
        {{/if}}
    </span>
    <span class="message__main">
        {{#if from }}
        <p class="message__from-text"><span class="message__from-name">{{from.name}}</span>&nbsp;<span class="message__original-timestamp">{{dateSent}}</span></p>
        {{/if}}
        <div class="message__body">
            {{{ body }}}
        </div>
        {{#if detail}}
        <p class="message__detail">{{detail}}</p>
        {{/if}}
        {{#if reply}}
        <p class="message__reply">{{> @icon icon=reply.icon class=reply.iconClass width="16" height="16"}}<span class="message__reply-text">{{reply.text}}</span></p>
        {{/if}}
        {{#if followUp}}
        {{> @button text=followUp.text className="btn-small message__follow-up-btn" }}
        {{/if}}
    </span>
</div>