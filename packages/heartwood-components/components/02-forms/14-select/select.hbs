<div class="{{ Classes.Select_Wrapper }}">
	{{#if label}}
		{{> @input-pre }}
	{{/if}}
	<div class="{{ Classes.Select }} {{ Classes.TextInput_Inner }} {{class}}">
		<select>
			{{#each options}}
			<option>{{ this }}</option>
			{{/each}}
		</select>
		{{#unless isSimple}}
			{{> @icon icon=icon class=Classes.Select_Icon }}
		{{/unless}}
	</div>
	{{> @input-helper}}
</div>
