<div class="select__wrapper">
	{{#if label}}
	{{> @input-pre }}
	{{/if}}
	<div class="select text-input__inner {{class}}">
		<select>
			{{#each options}}
			<option>{{ this }}</option>
			{{/each}}
		</select>
		{{#unless isSimple}}
		{{> @icon icon=icon class="select__icon"}}
		{{/unless}}
	</div>
	{{> @input-helper}}
</div>