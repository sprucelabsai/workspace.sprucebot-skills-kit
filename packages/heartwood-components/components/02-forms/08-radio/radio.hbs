<div class="{{ Classes.CheckboxItem }}">
	<div class="{{ Classes.CheckboxItem_Inner }}">
		<input class="{{ Classes.CheckboxItem_Input }}" type="radio" name="{{ name }}" id="{{ id }}" />
		<label class="{{ Classes.CheckboxItem_Label }}" for="{{ id }}">{{ label }}</label>
		<div class="{{ Classes.CheckboxItem_Icons }}">
			{{> @icon icon=radioYes class=(space Classes.CheckboxItem_Icon Classes.CheckboxItem_IconYes)}}
			{{> @icon icon=radioNo class=(space Classes.CheckboxItem_Icon Classes.CheckboxItem_IconNo)}}
		</div>
	</div>
	{{#if postText}}
	<p class="{{ Classes.CheckboxItem_PostText }}">{{ postText }}</p>
	{{/if}}
</div>