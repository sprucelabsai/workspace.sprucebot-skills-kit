<div class="{{ Classes.TextInput_Inner }}">
{{#if iconBefore}}
	{{> @icon icon=iconBefore class="{{ Classes.TextInput_IconPre }}"}}
{{/if}}
{{#if phoneNumber }}
	{{> @phone-country-input }}
{{/if}}
{{#if creditCard }}
	{{> @credit-card-icon }}
{{/if}}
<input
	type="{{ type }}"
	class="{{ Classes.TextInput_Input }}"
	placeholder="{{placeholder}}"
	{{#if value}}value="{{value}}"{{/if}}
	{{#if name}}name="{{ name }}"{{/if}}
	{{#if id}}id="{{ id }}"{{/if}}
	{{#if readonly}}readonly{{/if}}
/>
{{#if appendix}}
<p class="{{ Classes.TextInput_Appendix }}">{{ appendix }}</p>
{{/if}}
{{#if iconAfter}}
		{{> @simple-button icon=iconAfter className="{{ Classes.TextInput_ClearButton }}"}}
{{/if}}
{{!-- {{#if search }}
	{{#if value}}
		{{#unless readonly}}
		<button class="btn btn-simple text-input__clear-btn">
			{{> @cancel-icon}}
		</button>
		{{/unless}}
	{{/if}}
{{/if}} --}}
</div>