<div class="{{ Classes.Toggle_Wrapper }}">
	<div class="{{ Classes.Toggle }}">
		<input class="{{ Classes.Toggle_Input }}" type="checkbox" id="{{ id }}" {{#if on}}checked{{/if}}/>
		<label class="{{ Classes.Toggle_Label }}" for="{{ id }}" />
	</div>
	{{#if postText}}<label class="{{ Classes.Toggle_Text }}" for="{{ id }}">{{postText}}</label>{{/if}}
</div>