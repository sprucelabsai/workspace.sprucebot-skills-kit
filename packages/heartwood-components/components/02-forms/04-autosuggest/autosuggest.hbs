<div class="{{ Classes.TextInput }} {{class}}">
	{{#if label}}
		{{> @input-pre }}
	{{/if}}
	<div class="{{ Classes.AutoSuggest_Wrapper }}">
		{{> @input-inner }}
		<div class="{{ Classes.AutoSuggest }}">
			{{#if options}}
			<ul class="{{ Classes.AutoSuggest_List }}">
				{{#each options}}
					<li class="{{ Classes.AutoSuggest_ListItem }}">
						{{> @button text=text className=(space Classes.Button_Small Classes.AutoSuggest_ListItemInner) }}
					</li>
				{{/each}}
			</ul>
			{{else}}
				<div class="{{ Classes.AutoSuggest_NoResults }}">
					<p class="{{ Classes.AutoSuggest_NoResultsTitle }}">No matching countries found.</p>
					<p class="{{ Classes.AutoSuggest_NoResultsSubtitle }}">Please adjust your search and try again.</p>
				</div>
			{{/if}}
		</div>
	</div>
	{{> @input-helper}}
</div>