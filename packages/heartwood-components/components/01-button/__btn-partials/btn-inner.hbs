<span class="{{ Classes.Button_Inner }}">
	{{#if icon}}
	<span class="{{ Classes.Button_IconWrapper }}">
		{{> @icon icon=icon class=(concat Classes.Button_Icon iconClass) }}
	</span>
	{{/if}}
	{{#if text}}
	<span class="{{ Classes.Button_Text }}">{{text}}</span>
	{{/if}}
	{{#if loading}}{{> @loader }}{{/if}}
</span>