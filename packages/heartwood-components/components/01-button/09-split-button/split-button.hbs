<div class="split-button">
    <button class="btn split-button__default {{btnClass}}">
        <span class="btn__inner">
            <span class="btn__text">{{defaultAction}}</span>
        </span>
    </button>
    <button class="btn split-button__actions btn-icon-only {{btnClass}}">
        <span class="btn__inner">
            <span class="btn__icon-wrapper">
                {{> @icon class="btn__icon" icon="<path fill-rule='evenodd' clip-rule='evenodd' d='M16.59 8.59009L12 13.1701L7.41 8.59009L6 10.0001L12 16.0001L18 10.0001L16.59 8.59009Z' />"}}
            </span>
        </span>
    </button>
</div>