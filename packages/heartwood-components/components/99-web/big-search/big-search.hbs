<div class="big-search-overlay">
    <div class="big-search">

        <div class="big-search__header">
            <div class="text-input__inner">{{> @icon icon=searchInputIcon class="text-input__icon-pre"}}<input class="text-input__input"
                    placeholder="{{ placeholder }}" value="{{ value }}" /></div>
            {{#if value }}
            <button class="btn big-search__search-context-btn" type="button">
                <span class="btn__inner">
                    <span class="btn__text">{{value}}</span>
                    {{> @icon icon=searchContextBtnIcon class="btn__icon" }}
                </span>
            </button>
            {{else}}
            <button class="btn big-search__search-context-btn" type="button">
                <span class="btn__inner">
                    <span class="btn__text">Quick add a new guest</span>
                    {{> @icon icon=searchContextBtnIcon class="btn__icon" }}
                </span>
            </button>
            {{/if}}
        </div>
        <div class="big-search__body">
            {{> @people-list }}
        </div>

    </div>
</div>