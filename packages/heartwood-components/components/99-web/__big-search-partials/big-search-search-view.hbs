<div class="big-search__search-view-header">
	<div class="big-search__search-view-search-bar">
		<div class="text-input">
			<div class="text-input__inner">{{> @icon icon=searchInputIcon class="text-input__icon-pre"}}<input class="text-input__input"
				 placeholder="{{ placeholder }}" value="{{ value }}" /></div>
		</div>
		<div class="big-search__search-view-search-bar-buttons">{{#if value}}
			{{> @button className="btn-small" width="20" height="20" text="Clear"}}
			{{/if}}
			{{> @button className="btn-small" width="20" height="20" icon='
			<path fill-rule="evenodd" clip-rule="evenodd" d="M15.8334 5.3415L14.6584 4.1665L10.0001 8.82484L5.34175 4.1665L4.16675 5.3415L8.82508 9.99984L4.16675 14.6582L5.34175 15.8332L10.0001 11.1748L14.6584 15.8332L15.8334 14.6582L11.1751 9.99984L15.8334 5.3415Z" />'}}</div>

	</div>
	{{#if value }}
	{{> @button className="big-search__search-view-context-btn" type="button" text=value icon=searchContextBtnIcon }}
	{{else}}
	{{> @button className="big-search__search-view-context-btn" type="button" text="Quick add a new guest"
	icon=searchContextBtnIcon }}
	{{/if}}
</div>
<div class="big-search__view-body">
	{{#each searchListItems }}
	{{#ifEquals type 'people-list' }}
	{{> @people-list }}
	{{/ifEquals}}
	{{/each}}
</div>