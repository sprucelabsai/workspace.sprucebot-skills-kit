<header class="header-primary">
	<div class="header-primary__left">
		{{> @hamburger}}
		{{#if address}}
		<div class="header-primary__location">
			<p class="header-primary__text"><a href="#">{{{organization}}}</a></p>
			{{#if address}}
			<p class="header-primary__text header-primary__address"><a href="#">{{{address}}}</a></p>
			{{/if}}
		</div>
		{{else}}
		{{#if organization}}
		<div class="header-primary__organization">
			{{#if organizationImgUrl}}
			<div class="header-primary__organization-image" style="background-image: url({{{organizationImgUrl}}})"></div>
			{{/if}}
			<p class="header-primary__text"><a href="#">{{{organization}}}</a></p>
		</div>
		{{else}}
		<p class="header-primary__lockup" href="#">
			{{> @default-lockup}}
		</p>
		{{/if}}
		{{/if}}
	</div>
	<div class="header-primary__right">
		{{#if user}}
		{{> @search class="text-input-small" placeholder="Search anythingâ€¦"}}
		{{> @user-menu}}
		{{else}}
		{{> @button className="btn-small" text="Log In"}}
		{{> @button className="btn-primary btn-small" text="Sign Up"}}
		{{/if}}
	</div>
</header>