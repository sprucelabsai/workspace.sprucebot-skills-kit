<div class="{{ Classes.Card }}{{#if centered}} {{ Classes.Card_Centered }}{{/if}}">
	{{#if preHeader}}
	{{{preHeader}}}
	{{/if}}
	{{> @card-header}}
	<div class="{{ Classes.Card_Body }}">{{#> @partial-block }}
		{{#> @card-section }}{{{ children }}}{{/@card-section}}
		{{/@partial-block}}</div>
	{{#if footerActions}}
	<div class="{{ Classes.Card_Footer }}">
		{{#each footerActions}}
		{{> @button}}
		{{/each}}
	</div>
	{{/if}}
</div>