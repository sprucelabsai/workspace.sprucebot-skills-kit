

<div class="card-header">
	<div class="card-header__text">
		{{#if label}}
		<div class="card-header__label">
			{{#if label.icon}}
				{{> @icon icon=label.icon class="card-header__label-icon" width=label.iconWidth height=label.iconHeight}}
			{{/if}}
			<span class="card-header__label-text">{{label.text}}</span>
		</div>
		{{/if}}
		{{#if title}}
			<h3 class="card-header__title">{{{title}}}</h3>
		{{/if}}
	</div>
	{{#if headerActions}}
	<div class="card-header__actions">
		{{#each headerActions}}
			{{> @button}}
		{{/each}}
		{{#if contextMenu}}
			{{> @context-menu actions=contextMenu.actions}}
		{{/if}}
	</div>
	{{/if}}
</div>