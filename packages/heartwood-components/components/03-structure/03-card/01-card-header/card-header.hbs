<div class="{{ Classes.Card_Header }}">
	<div class="{{ Classes.Card_HeaderText }}">
		{{#if label}}
		<div class="{{ Classes.Card_HeaderLabel }}">
			{{#if label.icon}}
			{{> @icon icon=label.icon class=Classes.Card_HeaderLabelIcon width=label.iconWidth height=label.iconHeight}}
			{{/if}}
			<span class="{{ Classes.Card_HeaderLabelText }}">{{label.text}}</span>
		</div>
		{{/if}}
		{{#if title}}
		<h3 class="{{ Classes.Card_Title }}">{{{title}}}</h3>
		{{/if}}
	</div>
	{{#if headerActions}}
	<div class="{{ Classes.Card_HeaderActions }}">
		{{#each headerActions}}
		{{> @button}}
		{{/each}}
		{{#if contextMenu}}
		{{> @context-menu actions=contextMenu.actions}}
		{{/if}}
	</div>
	{{/if}}
</div>