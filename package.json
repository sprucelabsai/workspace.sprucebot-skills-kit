{
	"version": "0.2.1",
	"private": true,
	"name": "workspace.sprucebot-skills-kit",
	"workspaces": [
		"packages/sprucebot-skills-kit",
		"packages/sprucebot-node",
		"packages/sprucebot-skills-kit-server",
		"packages/react-sprucebot"
	],
	"scripts": {
		"local": "pm2 start ecosystem.config.js && echo 'run `yarn run log` to tail the logs'",
		"log": "pm2 log 'SB Skillskit'",
		"logs": "yarn run log",
		"stop": "pm2 stop ecosystem.config.js",
		"lint": "lerna run lint",
		"build": "lerna run build",
		"watch": "lerna run watch --stream",
		"start": "pm2 start ecosystem.config.js --no-daemon",
		"heroku-postbuild": "npm run build",
		"test": "jest --clearCache && lerna run test --parallel --ignore sprucebot-node",
		"test:update": "jest --clearCache && lerna run test --parallel --ignore sprucebot-node -- -u",
		"#precommit": "npm run lint",
		"prepush": "npm run lint && npm run test",
		"##commitmsg": "commitlint -e $GIT_PARAMS",
		"#commit": "git-cz",
		"publish": "lerna publish --log-level=silly",
		"clean": "rm -rf node_modules/ && rm -rf packages/react-sprucebot/node_modules/ && rm -rf packages/sprucebot-node/node_modules/ && rm -rf packages/sprucebot-skills-kit/node_modules/ && rm -rf packages/sprucebot-skills-kit-server/node_modules/"
	},
	"dependencies": {
		"pm2": "^2.10.1"
	},
	"devDependencies": {
		"commitizen": "^2.9.6",
		"conventional-changelog-sprucelabs": "^1.1.0",
		"husky": "^0.14.3",
		"lerna": "^3.2.1",
		"npm-utils": "^2.0.3"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	}
}
